<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
    
    <!-- Main Dashboard Frame -->
    <Frame name="ProfessionTrackerDashboard" parent="UIParent" movable="true" enableMouse="true" hidden="true" mixin="BackdropTemplateMixin" inherits="BackdropTemplate">
        <Size x="900" y="600"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        
        <Layers>
            <!-- Title Text -->
            <Layer level="ARTWORK">
                <FontString parentKey="Title" inherits="GameFontNormalLarge">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP">
                            <Offset x="0" y="-20"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        
        <Frames>
            <!-- Close Button -->
            <Button parentKey="CloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT">
                        <Offset x="-5" y="-5"/>
                    </Anchor>
                </Anchors>
            </Button>
            
            <!-- Scroll Frame for Character List -->
            <ScrollFrame parentKey="ScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size x="860" y="520"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset x="20" y="-60"/>
                    </Anchor>
                </Anchors>
                
                <ScrollChild>
                    <Frame parentKey="ScrollChild">
                        <Size x="840" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
            
            <!-- Refresh Button -->
            <Button parentKey="RefreshButton" inherits="UIPanelButtonTemplate">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT">
                        <Offset x="20" y="15"/>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ProfessionTrackerDashboard:Refresh()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
        
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton")
                self.Title:SetText("Profession Tracker Dashboard")
                self.RefreshButton:SetText("Refresh")
            </OnLoad>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Frame>
    
    <!-- Character Entry Template -->
    <Frame name="CharacterEntryTemplate" virtual="true" mixin="BackdropTemplateMixin" inherits="BackdropTemplate">
        <Size x="410" y="120"/>
        
        <Layers>
            <Layer level="OVERLAY">
                <!-- Character Name -->
                <FontString parentKey="Name" inherits="GameFontNormalHuge">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                            <Offset x="10" y="-8"/>
                        </Anchor>
                    </Anchors>
                </FontString>
                
                <!-- Character Info (Class, Level) -->
                <FontString parentKey="Info" inherits="GameFontNormalLarge">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT">
                            <Offset x="0" y="-2"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        
        <Frames>
            <!-- Profession Entry Container -->
            <Frame parentKey="ProfessionContainer">
                <Size x="390" y="70"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset x="10" y="-45"/>
                    </Anchor>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>
    
    <!-- Profession Progress Template -->
    <Frame name="ProfessionProgressTemplate" virtual="true">
        <Size x="200" y="65"/>
        
        <Layers>
            <Layer level="ARTWORK">
                <!-- Profession Name -->
                <FontString parentKey="Name" inherits="GameFontNormalLarge">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                            <Offset x="2" y="-2"/>
                        </Anchor>
                    </Anchors>
                </FontString>
                
                <!-- Expansion Name -->
                <!-- <FontString parentKey="Expansion" inherits="GameFontHighlight">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT">
                            <Offset x="0" y="-1"/>
                        </Anchor>
                    </Anchors>
                </FontString> -->
            </Layer>
            
            <Layer level="OVERLAY">
                <!-- Weekly Progress Icons -->
                
                <!-- Crafting Order Icon -->
                <Texture parentKey="CraftingOrderIcon" file="Interface\Icons\inv_crafting_orders">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.TreatiseIcon" relativePoint="RIGHT">
                            <Offset x="3" y="0"/>
                        </Anchor>
                    </Anchors>
                </Texture>
                
                <!-- Treasures Icon -->
                <Texture parentKey="TreasuresIcon" file="Interface\Icons\inv_misc_book_07">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.CraftingOrderIcon" relativePoint="RIGHT">
                            <Offset x="3" y="0"/>
                        </Anchor>
                    </Anchors>
                </Texture>
                
                <!-- Gather Nodes Icon (for gathering profs) -->
                <Texture parentKey="GatherNodesIcon" file="Interface\Icons\inv_magic_swirl_color2">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.TreasuresIcon" relativePoint="RIGHT">
                            <Offset x="3" y="0"/>
                        </Anchor>
                    </Anchors>
                </Texture>
                <!-- Treatise Icon -->
                <Texture parentKey="TreatiseIcon" file="Interface\Icons\inv_misc_profession_book_enchanting">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT">
                            <Offset x="0" y="-3"/>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
    
    <!-- Status Check Mark Texture (for completed activities) -->
    <Frame name="StatusCheckTemplate" virtual="true">
        <Size x="12" y="12"/>
        <Layers>
            <Layer level="OVERLAY" textureSubLevel="2">
                <Texture name="$parentCheck" file="Interface\RaidFrame\ReadyCheck-Ready">
                    <Size x="12" y="12"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>
    
</Ui>